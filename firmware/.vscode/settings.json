  "actionButtons": {
    "defaultColor": "#ff0034", // Can also use string color names.
    "loadNpmCommands":false, // Disables automatic generation of actions for npm commands.
    "reloadButton":"♻️", // Custom reload button text or icon (default ↻). null value enables automatic reload on configuration change
    "commands": [
        {
            "name": "Debug",
            "color": "white",
            "singleInstance": true,
            "command": "./debug.sh",
        },
        {
            "name": "Build",
            "color": "white",
            "singleInstance": true,
            "command": "./build.sh",
        },
        {
            "name": "OpenOCD",
            "color": "white",
            "singleInstance": true,
            "command": ". $HOME/$whoami/Documents/esp-idf/export.sh && openocd -c \"set ESP_RTOS none\" -f board/esp32s3-ftdi.cfg ",
        },
        {
            "name": "Menuconfig",
            "color": "white",
            "singleInstance": true,
            "command": ". $HOME/$whoami/Documents/esp-idf/export.sh && idf.py menuconfig",
        },
        {
            "name": "Flash",
            "color": "white",
            "singleInstance": true,
            "command": ". $HOME/$whoami/Documents/esp-idf/export.sh && idf.py -p /dev/ttyACM0 flash",
        },        
	{
            "name": "Docker Build",
            "color": "white",
            "singleInstance": true,
            "command": "podman run --rm -v $PWD:/project -w /project espressif/idf:latest idf.py build",
        },
        {
            "name": "Unit Test",
            "color": "white",
            "singleInstance": true,
            "command": "cd ./main/host_test && ./test.sh",
        }
    ]
},
"git.ignoreLimitWarning": true
